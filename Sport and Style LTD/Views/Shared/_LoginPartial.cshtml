@using Microsoft.AspNetCore.Identity
@using Sport_and_Style_LTD.Data
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="nav justify-content-end">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  class="btn btn-success" type="submit">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <div>
            <a class="btn btn-outline-success me-2" type="submit" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </div>
    </li>
    <li class="nav-item" >
        <div>
            <a  class="btn btn-outline-success me-2" type="submit" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </div>
    </li>
}
</ul>
